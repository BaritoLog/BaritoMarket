<!DOCTYPE html>
<html>
<head>
  <title>Barito Market</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag  'https://www.w3schools.com/w3css/4/w3.css' %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="w3-sidebar w3-bar-block w3-collapse w3-card" style="z-index:3;width:250px;" id="mySidebar">

  <% unless user_signed_in? %>
      <%= link_to 'Sign in', new_user_session_path, class: 'w3-bar-item w3-button' %>
  <% else %>
      <div class="w3-bar-item w3-button w3-center w3-teal"> <%= @current_user.email %> </div>
      <a class="w3-bar-item w3-button w3-hide-large w3-large" href="javascript:void(0)" onclick="w3_close()">Close <i class="fa fa-remove"></i></a>
      <a class="w3-bar-item w3-button" href="/">Home</a>
      <%= link_to 'Service', services_path, class: 'w3-bar-item w3-button' %>
      <%= link_to 'Group', groups_path, class: 'w3-bar-item w3-button' %>
      <%= link_to 'Store', stores_path, class: 'w3-bar-item w3-button' %>
      <%= link_to 'Forwarder', forwarders_path, class: 'w3-bar-item w3-button' %>
      <%= link_to 'Config', service_configs_path, class: 'w3-bar-item w3-button' %>
      <%= link_to 'Sign Out', destroy_user_session_path, class: 'w3-bar-item w3-button w3-red' %>
  <% end %>



</nav>

<div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" id="myOverlay"></div>

<div class="w3-main" style="margin-left:250px;">

  <div class="w3-container" style="padding:32px">

  <% unless user_signed_in? %>
      <p>Please sign in</p>
  <% else %>
      <%= yield %>
  <% end %>
  </div>

  <footer class="w3-container" style="padding:32px">
    <p>&copy; 2018 Systems GoPay</p>
  </footer>

</div>

<script>
    // Open and close the sidebar on medium and small screens
    function w3_open() {
        document.getElementById("mySidebar").style.display = "block";
        document.getElementById("myOverlay").style.display = "block";
    }
    function w3_close() {
        document.getElementById("mySidebar").style.display = "none";
        document.getElementById("myOverlay").style.display = "none";
    }

</script>


</body>
</html>
