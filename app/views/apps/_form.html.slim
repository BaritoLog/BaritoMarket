- @model = @app
= form_for @app do |f|
  == render 'layouts/form_error'
  .form-group
    = f.label :name
    = f.text_field :name, {class: 'form-control'}
    small.form-text.text-muted
      | Please enter the name of your application / service
  .form-group
    = f.label :tps_config_id, 'TPS Configuration'
    = f.select :tps_config_id, @tps_config.all, { prompt: true }, { class: 'form-control' }
    small.form-text.text-muted
      | Please choose your TPS Configuration
  .form-group
    = f.label :app_group_id, 'Application Group'
    = f.collection_select :app_group_id, AppGroup.order(:name), :id, :name, { prompt: true }, { class: 'form-control' }
    small.form-text.text-muted
      | Choose from group, or you can add a 
      = link_to 'new group', new_app_group_path
  .actions = f.submit 'Submit',class: 'btn btn-primary'
