<p id="notice"><%= notice %></p>

<h1>Listing Forwarders</h1>


<div class="entities-panel">
  <table class="w3-table w3-bordered">
    <thead>
      <tr>
        <th class="column-id">#</th>
        <th class="column-name">Name</th>
        <th>Host</th>
        <th>Forwarder</th>
        <th>Store</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @forwarders.each do |forwarder| %>
        <tr>
          <td><%= forwarder.id %></td>
          <td><%= forwarder.name %></td>
          <td><%= forwarder.host %></td>
          <td><%= forwarder.stream.name %></td>
          <td><%= forwarder.store.name %></td>
          <td>
            <%= link_to 'Show', forwarder, class: 'ctrl-link' %>
            <%= link_to 'Edit', edit_forwarder_path(forwarder), class: 'ctrl-link' %>
            <%= link_to 'Destroy', forwarder, method: :delete, data: { confirm: 'Are you sure?' }, class: 'ctrl-link' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>  
</div>


