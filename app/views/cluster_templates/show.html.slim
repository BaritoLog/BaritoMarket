.row
  .col-sm-6
    .card
      .h5.card-header Cluster Template Details
      .card-body
        dl.row
          dt.col-sm-3 Name:
          dd.col-sm-9
            = @cluster_template.name

          dt.col-sm-3 Instances:
          dd.col-sm-9
            pre
              code
                = @instances

          dt.col-sm-3 Kafka Options:
          dd.col-sm-9
            pre
              code
                = @kafka_options

      .card-footer.text-right
        .btn.btn-primary.btn-sm.float-right
          = link_to 'Back to Cluster Template', cluster_templates_path, class: 'text-light', style: 'text-decoration:none'
        .btn.btn-success.btn-sm.mr-2
          = link_to 'Edit', edit_cluster_template_path(@cluster_template), class: 'text-light', style: 'text-decoration:none'
