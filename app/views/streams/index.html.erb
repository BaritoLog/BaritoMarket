<p id="notice"><%= notice %></p>

<h1>Listing Streams</h1>

<div class="entities-panel">
  <table class="w3-table w3-bordered">
    <thead>
      <tr>
        <th class="column-id">#</th>
        <th class="column-name">Name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @streams.each do |stream| %>
        <tr>
          <td><%= stream.id %></td>
          <td><%= stream.name %></td>
          <td>
            <%= link_to 'Show', stream, class: 'ctrl-link'%>
            <%= link_to 'Edit', edit_stream_path(stream), class: 'ctrl-link' %>
            <%= link_to 'Destroy', stream, method: :delete, data: { confirm: 'Are you sure?' }, class: 'ctrl-link' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>  
</div>

