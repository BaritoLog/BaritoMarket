<p id="notice"><%= notice %></p>

<h1>Listing Groups</h1>

<div class="entities-panel">
  <table class="w3-table w3-bordered">
    <thead>
      <tr>
        <th class="column-id">#</th>
        <th class="column-name">Name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.id %></td>
          <td><%= group.name %></td>
          <td>
            <%= link_to 'Show', group, class: 'ctrl-link'%>
            <%= link_to 'Edit', edit_group_path(group), class: 'ctrl-link' %>
            <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }, class: 'ctrl-link' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>  
</div>

<%= link_to 'New Group', new_group_path %>
