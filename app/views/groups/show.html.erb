<h2>Group#<%= @group.id %></h2>

<p id="notice"><%= notice %></p>

<div class="show-group">
  <h3>General</h3>
  <p>
    <strong>id:</strong>
    #<%= @group.id %>
  </p>
  <p>
    <strong>Name:</strong>
    <%= @group.name %>
  </p>
</div>

<div class="show-group">
  <h3>Receiver</h3>
  <p>
    <strong>Receiver Host:</strong>
    <%= @group.receiver_host %>
  </p>
  <p>
    <strong>Receiver Port:</strong>
    <%= @group.receiver_port %>
  </p>
  <p>
    <strong>Receiver Heartbeat Url:</strong>
    <%= @group.receiver_heartbeat_url %>
  </p>
</div>

<div class="show-group">
  <h3>Kafka</h3>
  <p>
    <strong>Zookeeper Hosts</strong>
    <%= @group.zookeeper_hosts %>
  </p>
  <p>
    <strong>Kafka Broker Host</strong>
    <%= @group.kafka_broker_hosts %>
  </p>
  <p>
    <strong>Kafka Manager</strong>
    <%= @group.kafka_manager_host %>
  </p>
</div>


<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
